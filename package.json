{
  "name": "dboard",
  "version": "1.0.0",
  "private": true,
  "warnings": [
    "Setting NODE_TLS_REJECT_UNAUTHORIZED to '0' makes TLS connections and HTTPS requests insecure by disabling certificate verification.",
    "This should only be used in a trusted local development environment.",
    "Do not use this setting in production environments as it exposes the application to security vulnerabilities."
  ],
  "scripts": {
    "warning": "echo 'WARNING: Setting NODE_TLS_REJECT_UNAUTHORIZED to '0' makes TLS connections and HTTPS requests insecure by disabling certificate verification. This should only be used in a trusted local development environment. Do not use this setting in production environments as it exposes the application to security vulnerabilities.'",
    "warnings": "echo 'REPEAT ------------ ' && pnpm run warning",
    "dev": "NODE_TLS_REJECT_UNAUTHORIZED=0 HOST=dboard.server PORT=443 vite dev --config vite.config.dev.ts --host --port 443",
    "start": "sudo NODE_TLS_REJECT_UNAUTHORIZED=0 PORT=443 HOST=dboard.server node server.js",
    "build": "NODE_TLS_REJECT_UNAUTHORIZED=0 HOST=dboard.server PORT=443 vite build --config vite.config.prod.ts",
    "build.dev": "NODE_TLS_REJECT_UNAUTHORIZED=0 HOST=dboard.server PORT=443 vite build --config vite.config.dev.ts --mode development",
    "build.test": "vite build --config vite.config.test.ts",
    "preview": "NODE_TLS_REJECT_UNAUTHORIZED=0 vite preview --config vite.config.prod.ts --host --port 443",
    "preview.test": "vite preview --config vite.config.test.ts --host",
    "test": "pnpm run test:integration && pnpm run test:unit",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check.watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "lint.watch": "chokidar './src/**/*.{js,ts,svelte,json}' -c 'pnpm eslint .'",
    "watch": "chokidar './src/**/*.{js,ts,svelte,json}' -c 'pnpm run lint'",
    "format": "prettier --write .",
    "sync": "svelte-kit sync",
    "test.integration": "playwright test",
    "test.unit": "vitest",
    "trash": "rm -rf .svelte-kit build",
    "prepare": "husky",
    "release": "release-please --config-file='.config/release/config.json' --manifest-file='.config/release/.manifest.json' github-release --token=$(gh auth token) --repo-url='dgrebb/dboard'",
    "release.dr": "pnpm release --dry-run",
    "release.update": "pnpm release release-pr",
    "reinstall": "rm -rf node_modules pnpm-lock.yaml && pnpm i",
    "chokidar": "chokidar-cli"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ],
    "*.md": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "bits-ui": "^0.21.13",
    "canvas": "^2.11.2",
    "clsx": "^2.1.1",
    "express": "^4.19.2",
    "fast-average-color": "^9.4.0",
    "tailwind-merge": "^2.4.0",
    "tailwind-variants": "^0.2.1",
    "ws": "^8.18.0",
    "xmldom": "^0.6.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@iconify/svelte": "^4.0.2",
    "@playwright/test": "^1.45.3",
    "@sveltejs/adapter-node": "^5.2.0",
    "@sveltejs/kit": "^2.5.20",
    "@sveltejs/vite-plugin-svelte": "^3.1.1",
    "@types/cors": "^2.8.17",
    "@types/echarts": "^4.9.22",
    "@types/eslint": "^9.6.0",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^4.17.21",
    "@types/http-proxy": "^1.17.14",
    "@types/node": "^22.1.0",
    "@types/ws": "^8.5.12",
    "@types/xmldom": "^0.1.34",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "autoprefixer": "^10.4.20",
    "chokidar-cli": "^3.0.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^16.4.5",
    "echarts": "^5.5.1",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.43.0",
    "flowbite": "^2.4.1",
    "flowbite-svelte": "^0.46.15",
    "globals": "^15.9.0",
    "http-proxy": "^1.18.1",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.8",
    "nanoid": "^5.0.7",
    "postcss": "^8.4.40",
    "postcss-color-function": "^4.1.0",
    "postcss-load-config": "^6.0.1",
    "postcss-mixins": "^10.0.1",
    "prettier": "^3.3.3",
    "prettier-plugin-css-order": "^2.1.2",
    "prettier-plugin-svelte": "^3.2.6",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "release-please": "^16.12.0",
    "svelte": "5.0.0-next.208",
    "svelte-check": "^3.8.5",
    "svelte-grid": "^5.1.2",
    "tailwindcss": "^3.4.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "typescript-eslint": "^7.18.0",
    "vite": "^5.3.5",
    "vite-plugin-eslint": "^1.8.1",
    "vitest": "^2.0.5"
  },
  "type": "module"
}
